---
import { ClientRouter } from 'astro:transitions'
import Flare from '../components/Flare.astro'
import Player from '../components/Player.astro'
---

<!doctype html>
<html lang="es-CL">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/ec-ico.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta
			name="keywords"
			content="Concurso,Valparaíso,Eficiencia Energética, Plan de Buenas Prácticas, Escuelas, Colegios, Liceos"
		/>
		<meta
			name="description"
			content="Inscribe tu colegio al concurso #ec25 y gana un laboratorio solar para tu colegio"
		/>
		<meta name="author" content="ccamposn@minenergia.cl" />
		<meta name="og:image" content="https://energychallenge.web.app/ec-ico.svg" />
		<meta name="og:image:height" content="25" />
		<meta name="og:image:width" content="250" />
		<meta
			name="og:description"
			content="Concursa en #ec25 salva el planeta y gana fabulosos premios para tu colegio"
		/>

		<title>#ec25</title>
		<ClientRouter />
	</head>
	<body>
		<div id="container">
			<Flare />
			<slot />
			<Player />
		</div>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		box-sizing: content-box;
		padding: 0;
	}
	#container {
		width: 100vw;
		min-height: 100vh;
		background: linear-gradient(180deg, #1a241c, #0b0f1d);
		position: absolute;
		display: flex;
		flex-direction: column;
		align-items: center;
		/* justify-content: center; */
		z-index: 0;
	}
</style>
